{
  "workbench.colorCustomizations": {
    // 活動欄（Activity Bar）設定
    "activityBar.background": "#c69ceed3",
    "activityBar.activeBackground": "#c69ceed3",
    "activityBar.activeBorder": "#ffffff",
    "activityBar.foreground": "#06060a99",
    "activityBar.inactiveForeground": "#06060a99",
    "activityBarBadge.background": "#f7910d",
    "activityBarBadge.foreground": "#2a07f0",

    // 標題列（Title Bar）設定
    "titleBar.activeBackground": "#c69ceed3",       // 當前選取的標題列背景色
    "titleBar.activeForeground": "#000000",       // 當前選取的標題列文字色
    "titleBar.inactiveBackground": "#c69ceed3",     // 未選取的標題列背景色
    "titleBar.inactiveForeground": "#000000",     // 未選取的標題列文字色

    // 菜單列（Menu Bar）設定（可選）
    "menu.background": "#c69ceed3",
    "menu.foreground": "#06060a99",
    "menu.selectionBackground": "#f7910d",
    "menu.selectionForeground": "#2a07f0"
  }
}